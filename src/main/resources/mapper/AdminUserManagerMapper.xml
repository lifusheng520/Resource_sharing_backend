<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sharing.mapper.AdminUserManagerMapper">

    <select id="queryUserInfoByPage" parameterType="int" resultType="userInfo">
        SELECT u.*, ui.name name, ui.email email
        FROM user u left join user_info ui
            on u.id = ui.user_id
        limit #{begin}, #{number};
    </select>

    <select id="countUserInfoPageTotal" resultType="int">
        SELECT count(*) FROM user
    </select>

    <update id="updateUserAccountEnabled" parameterType="list">
        update user
        <set>
            enabled = #{enabled}
        </set>
        where id in
        <foreach collection="idList" open="(" close=")" item="user_id" separator=",">
            #{user_id}
        </foreach>
    </update>




</mapper>