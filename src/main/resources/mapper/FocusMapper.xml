<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sharing.mapper.FocusMapper">


    <insert id="addFocus" parameterType="focus">
        insert into focus(id, user_id, focus_uid, time)
        values (#{id}, #{user_id}, #{focus_uid}, #{time});
    </insert>

    <select id="getFocusListById" parameterType="int" resultType="focus">
        SELECT * FROM focus
        WHERE user_id = #{user_id};
    </select>

    <delete id="deleteFocus" parameterType="int">
        DELETE FROM focus
        WHERE user_id = #{user_id}
                and focus_uid = #{focus_uid};
    </delete>


</mapper>